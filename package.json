{
  "name": "codecrad",
  "version": "1.0.0",
  "description": "Coding game speedrun",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "elzup/codecrad",
  "author": "elzup <guild0105@gmail.com> (elzup.com)",
  "bin": {
    "codecrad": "dist/cli.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "build": "tsc && cp -r src/stages dist/ && cp .prettierrc dist",
    "deploy": "yarn run build && np",
    "add-contributor": "all-contributors add",
    "precommit": "lint-staged",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest src --detectOpenHandles",
    "test:cov": "jest src --coverage --ci --runInBand"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli-app",
    "cli-game",
    "cli",
    "typing-game",
    "speedrun",
    "game"
  ],
  "dependencies": {
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "diff": "^4.0.2",
    "fs-extra": "^8.1.0",
    "ink": "^2.7.1",
    "meow": "^6.0.1",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@types/chalk": "2.2.0",
    "@types/chokidar": "2.1.3",
    "@types/diff": "4.0.2",
    "@types/fs-extra": "8.1.0",
    "@types/jest": "25.2.1",
    "@types/meow": "5.0.0",
    "@types/node": "13.13.4",
    "@types/react": "16.9.34",
    "@types/sinon": "7.5.2",
    "all-contributors-cli": "6.14.2",
    "eslint": "6.8.0",
    "eslint-config-nzap": "1.4.6",
    "husky": "4.2.5",
    "ink-testing-library": "1.0.3",
    "jest": "25.5.2",
    "lint-staged": "10.2.1",
    "prettier": "1.19.1",
    "sinon": "9.0.2",
    "strip-ansi": "6.0.0",
    "ts-jest": "25.4.0",
    "ts-node": "8.9.1",
    "typescript": "3.8.3"
  }
}
