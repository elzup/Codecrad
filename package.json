{
  "name": "codecrad",
  "version": "1.0.0",
  "description": "Coding game speedrun",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "elzup/codecrad",
  "author": "elzup <guild0105@gmail.com> (elzup.com)",
  "bin": {
    "codecrad": "dist/cli.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "build": "tsc && cp -r src/stages dist/ && cp .prettierrc dist",
    "deploy": "yarn run build && np",
    "add-contributor": "all-contributors add",
    "precommit": "lint-staged",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest src --detectOpenHandles --no-color",
    "test:cov": "jest src --coverage --ci --runInBand"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli-app",
    "cli-game",
    "cli",
    "typing-game",
    "speedrun",
    "game"
  ],
  "dependencies": {
    "chalk": "^4.1.0",
    "chokidar": "^3.4.2",
    "diff": "^4.0.2",
    "fs-extra": "^9.0.1",
    "ink": "^3.0.3",
    "meow": "^7.1.0",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@types/chalk": "2.2.0",
    "@types/chokidar": "2.1.3",
    "@types/diff": "4.0.2",
    "@types/fs-extra": "9.0.1",
    "@types/jest": "26.0.10",
    "@types/meow": "5.0.0",
    "@types/node": "14.6.2",
    "@types/react": "16.9.48",
    "@types/sinon": "9.0.5",
    "all-contributors-cli": "6.17.2",
    "eslint": "7.7.0",
    "eslint-config-nzap": "3.2.0",
    "husky": "4.2.5",
    "ink-testing-library": "2.0.1",
    "jest": "26.4.2",
    "lint-staged": "10.2.13",
    "prettier": "2.1.1",
    "sinon": "9.0.3",
    "strip-ansi": "6.0.0",
    "ts-jest": "26.3.0",
    "ts-node": "8.10.2",
    "typescript": "4.0.2"
  }
}
