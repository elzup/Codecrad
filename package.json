{
  "name": "codecrad",
  "version": "0.0.9",
  "description": "Coding game RTA",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "elzup/codecrad",
  "author": "elzup <guild0105@gmail.com> (elzup.com)",
  "bin": {
    "codecrad": "dist/cli.js"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "build": "tsc && cp -r src/stages dist/ && cp .prettierrc dist",
    "deploy": "npm run build && np",
    "add-contributor": "all-contributors add",
    "precommit": "lint-staged",
    "lint": "tslint",
    "test": "jest src --detectOpenHandles",
    "test:cov": "jest src --coverage --ci --runInBand"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli-app",
    "cli-game",
    "cli",
    "typing-game",
    "speedrun"
  ],
  "dependencies": {
    "chalk": "^2.4.2",
    "chokidar": "^2.0.4",
    "diff": "^4.0.1",
    "fs-extra": "^7.0.1",
    "ink": "^2.0.0-11",
    "meow": "^3.7.0",
    "react": "^16.7.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^1.7.5",
    "@types/diff": "^4.0.1",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^24.0.4",
    "@types/meow": "^5.0.0",
    "@types/node": "^10.12.21",
    "@types/react": "^16.8.1",
    "all-contributors-cli": "^5.11.0",
    "eslint": "^5.13.0",
    "husky": "^1.3.1",
    "jest": "~23.6.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4"
  }
}
