{
  "name": "codecrad",
  "version": "0.0.0",
  "description": "Coding game RTA",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "elzup/codecrad",
  "author": "elzup <guild0105@gmail.com> (elzup.com)",
  "bin": "dist/cli.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "cli": "babel-node src/cli.js",
    "build": "babel src --out-dir dist && npm run prepack:flow",
    "deploy": "npm run build && yarn publish",
    "prepack:flow": "flow-copy-source src dist",
    "add-contributor": "all-contributors add",
    "precommit": "yarn flow && lint-staged",
    "fmt": "prettier --write '**/*.{js,json,md}'",
    "flow": "flow",
    "lint": "eslint .",
    "test": "jest src",
    "test:cov": "jest src --coverage --ci --runInBand",
    "test:ci": "yarn flow && yarn lint && yarn test:cov"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli-app",
    "cli",
    ""
  ],
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/node": "^7.0.0-beta.54",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-flow": "^7.0.0-beta.54",
    "all-contributors-cli": "^5.11.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.0.1",
    "eslint": "^5.13.0",
    "eslint-config-precure": "^4.2.0",
    "flow-bin": "^0.92.0",
    "flow-copy-source": "^2.0.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4"
  },
  "dependencies": {
    "meow": "^3.7.0"
  }
}
