{
  "name": "codecrad",
  "version": "1.0.0",
  "description": "Coding game speedrun",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "elzup/codecrad",
  "author": "elzup <guild0105@gmail.com> (elzup.com)",
  "bin": {
    "codecrad": "dist/cli.js"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "build": "tsc && cp -r src/stages dist/ && cp .prettierrc dist",
    "deploy": "yarn run build && np",
    "add-contributor": "all-contributors add",
    "precommit": "lint-staged",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest src --detectOpenHandles",
    "test:cov": "jest src --coverage --ci --runInBand"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli-app",
    "cli-game",
    "cli",
    "typing-game",
    "speedrun",
    "game"
  ],
  "dependencies": {
    "chalk": "^2.4.2",
    "chokidar": "^3.2.2",
    "diff": "^4.0.1",
    "fs-extra": "^8.1.0",
    "ink": "^2.5.0",
    "meow": "^5.0.0",
    "react": "^16.11.0"
  },
  "devDependencies": {
    "@types/chalk": "2.2.0",
    "@types/chokidar": "2.1.3",
    "@types/diff": "4.0.2",
    "@types/fs-extra": "8.0.1",
    "@types/jest": "24.0.21",
    "@types/meow": "5.0.0",
    "@types/node": "12.12.3",
    "@types/react": "16.9.11",
    "@types/sinon": "7.5.0",
    "all-contributors-cli": "6.9.3",
    "eslint": "6.6.0",
    "eslint-config-nzap": "1.2.5",
    "husky": "3.0.9",
    "ink-testing-library": "1.0.2",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "sinon": "7.5.0",
    "strip-ansi": "6.0.0",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "typescript": "3.6.4"
  }
}
