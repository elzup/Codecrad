{
  "name": "codecrad",
  "version": "1.0.0",
  "description": "Coding game speedrun",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "elzup/codecrad",
  "author": "elzup <guild0105@gmail.com> (elzup.com)",
  "bin": {
    "codecrad": "dist/cli.js"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "cli-ems": "node --loader ts-node/esm src/cli.ts",
    "build": "tsc && cp -r src/stages dist/ && cp .prettierrc dist",
    "deploy": "yarn run build && np",
    "add-contributor": "all-contributors add",
    "precommit": "lint-staged",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest src --detectOpenHandles --no-color",
    "test:cov": "jest src --coverage --ci --runInBand",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cli-app",
    "cli-game",
    "cli",
    "typing-game",
    "speedrun",
    "game"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "diff": "^5.0.0",
    "fs-extra": "^10.0.0",
    "ink": "^3.2.0",
    "meow": "^10.1.1",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^2.0.0",
    "@types/chalk": "2.2.0",
    "@types/chokidar": "2.1.3",
    "@types/diff": "5.0.1",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.2",
    "@types/meow": "6.0.0",
    "@types/node": "16.11.1",
    "@types/react": "17.0.30",
    "@types/sinon": "10.0.4",
    "all-contributors-cli": "6.20.0",
    "eslint": "7.32.0",
    "eslint-config-nzap": "4.4.0",
    "husky": "^7.0.2",
    "ink-testing-library": "2.1.0",
    "jest": "27.3.1",
    "lint-staged": "12.3.5",
    "prettier": "2.4.1",
    "sinon": "11.1.2",
    "strip-ansi": "7.0.1",
    "ts-jest": "27.0.7",
    "ts-node": "10.3.0",
    "typescript": "4.4.4"
  }
}
