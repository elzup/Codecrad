{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "strict": true,
    "importHelpers": false,
    "noEmitHelpers": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/@types", "node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
